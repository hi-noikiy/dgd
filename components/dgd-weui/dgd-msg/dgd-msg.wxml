<view class="page">
  <view class="weui-msg">
    <view class="weui-msg__icon-area">
      <icon type="success" size="93"></icon>
    </view>
    <view class="weui-msg__text-area">
      <view class="weui-msg__title">{{title}}</view>
      <view class="weui-msg__desc">{{desc}}</view>
    </view>
    <view class="weui-msg__opr-area">
      <view class="weui-btn-area">
        <button class="weui-btn" type="primary" catchtap="primaryNav">{{primaryText}}</button>
        <button class="weui-btn" type="default" catchtap="secondNav">{{secondText}}</button>
      </view>
    </view>
    <view class="weui-msg__extra-area">
      <view class="weui-footer">
        <view class="weui-footer__links">
          <navigator url="{{footerLink}}" class="weui-footer__link">{{footerLinkText}}</navigator>
        </view>
        <view class="weui-footer__text">{{footerText}}</view>
      </view>
    </view>
  </view>
</view>